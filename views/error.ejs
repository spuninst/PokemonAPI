<div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md mt-8">
  <h1 class="text-2xl font-bold mb-4 text-red-600">Error</h1>
  
  <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
    <p><%= message %></p>
  </div>
  
  <% if (process.env.NODE_ENV !== 'production' && locals.error) { %>
    <div class="mt-4 p-4 bg-gray-100 rounded-md overflow-auto">
      <pre class="text-sm"><%= error.stack %></pre>
    </div>
  <% } %>
  
  <div class="mt-6">
    <a href="/" class="inline-block px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700">
      Return to Dashboard
    </a>
  </div>
</div>